<div class="container">
  <div class="row">
    <% @drinks.each do |drink| %>
      <div class="col-lg-2 col-md-6 mb-4">
      <%# We want to be able to click in the name and take us to the drink page %>
        <%= link_to drink.name, drink_path(drink) %>
          <div class="card-body">
            <p class="card-text"><%= drink.name %></p>
          </div>
          <div class="card-footer text-muted">
            <p class="card-text">Price: <%= drink.price %></p>
          </div>

      </div>
    <% end %>
  </div>
</div>
