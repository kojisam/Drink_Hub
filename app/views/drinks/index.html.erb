<div class="container card mx-auto 2">
  <div class="row">
    <% @drinks.each do |drink| %>
      <div class="container photo">
      <% if drink.photo.attached? %>
        <%= cl_image_tag drink.photo.key, height: 300, width: 400, crop: :fit %>
      <% end %>

      <div class="overlay">

      <%# We want to be able to click in the name and take us to the drink page %>
        <%= link_to drink.name, drink_path(drink) %> <br>


          <div class="card-footer text-muted">
            <p class="items price">Price: Â£<%= drink.price %></p>
          </div>

      </div>

          <%= link_to "Buy now", new_drink_order_path(drink) %>

      </div>
    <% end %>
  </div>
</div>
