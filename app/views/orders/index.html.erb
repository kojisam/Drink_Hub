<div class="d-flex justify-content-center my-5">
  <div class="col-12 col-lg-6">
    <div class="card text-center align-self-center border-0" style="background-color:#ddcecde8">
  <table>
    <br>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th>price</th>
          <th>quantity</th>
          <th>total</th>
          <th>order</th>
        </tr>
      </thead>
      <tbody id="test">
      <% sum = 0%>
        <% @orders.each do |order|%>
          <tr class="card-body">
            <td><%= image_tag order.drink.photo, size:  "100x100" %></td>
            <td><%= order.drink.name %></td>
            <td>£<%= order.drink.price %></td>
            <td><%= order.quantity %></td>
            <%# <% sum  += (order.drink.price * order.quantity) %>
            <td>£<%= total = (order.drink.price * order.quantity)%></td>
            <% sum  += (order.drink.price * order.quantity) %>
            <td><button type="button" class="btn btn-danger"><%= link_to "See order", order_path(order) %></td>
          </tr>
        <% end %>
        <span>  <%= "Total of Orders : £#{sum}" %> </span>
      </tbody>
    </table>
  </div>
  </div>
</div>
